{
  "name": "live-chat-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "npm run dev:start --workspace=@live-chat/backend",
    "dev:frontend": "npm run dev --workspace=@live-chat/frontend",
    "build": "npm-run-all --parallel build:*",
    "build:backend": "npm run build --workspace=@live-chat/backend",
    "build:frontend": "npm run build --workspace=@live-chat/frontend",
    "build:shared-types": "npm run build --workspace=@live-chat/shared-types",
    "build:shared-dtos": "npm run build --workspace=@live-chat/shared-dtos",
    "check-types": "npm run check-types --workspaces --if-present"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.0"
  },
  "dependencies": {
    "@nestjs/schedule": "^6.0.1"
  }
}
