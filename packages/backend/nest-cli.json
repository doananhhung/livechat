{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": false,
    "builder": "tsc",
    "tsConfigPath": "tsconfig.json",
    "assets": [],
    "watchAssets": false
  },
  "projects": {
    "live-chat-app": {
      "type": "application",
      "root": ".",
      "entryFile": "main",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    },
    "worker": {
      "type": "application",
      "root": ".",
      "entryFile": "worker",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.worker.json"
      }
    }
  }
}
